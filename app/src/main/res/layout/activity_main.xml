<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg0"
        android:orientation="vertical"
        android:padding="0dp"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/city"
                style="@android:style/Widget.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45px"
                android:layout_marginTop="50px"
                android:includeFontPadding="false"
                android:onClick="cityView"
                android:text="北京"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50px"
                android:text="09月16日 周一 农历八月十八"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>

        <!--<LinearLayout-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:background="@drawable/moon"-->
        <!--android:orientation="vertical"-->
        <!--app:layout_heightPercent="43.2%w"-->
        <!--app:layout_widthPercent="66%w">-->

        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/sun"
            android:orientation="vertical"
            app:layout_heightPercent="40%w"
            app:layout_widthPercent="40%w">

        </LinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/temp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="right|top"
                android:includeFontPadding="false"
                android:text="24"
                android:textColor="#ffffff"
                android:textSize="80dp"
                app:layout_marginRightPercent="2%w"
                app:layout_widthPercent="48%w" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:textSize="80dp"
                app:layout_marginLeftPercent="2%w"
                app:layout_widthPercent="48%w">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="℃"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/curWeather"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="晴 实时"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />
            </LinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>

        <TextView
            android:id="@+id/times"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginTop="-20px"
            android:gravity="center"
            android:text="-- 更新3次 --"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tempRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginTop="40px"
            android:gravity="center"
            android:text="16~26℃"
            android:textColor="#6e87e5"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:text="晴转多云"
            android:textColor="#6e87e5"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:text="西风3～4级"
            android:textColor="#6e87e5"
            android:textSize="18sp" />

    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentLinearLayout>